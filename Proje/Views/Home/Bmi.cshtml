
@{
    ViewData["Title"] = "BMI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: powderblue;
            
        }

        #div1 {
            width: 750px;
            position: absolute;
            top: 50%;
            left: 50%;
            background-color: #fff;
            transform: translate(-50%,-50%);
            padding: 40px;
            border-radius: 10px;
            border:2px solid black;
        }

        .row {
            margin: 0 -15px 0;
        }

        .title {
            margin: 1em 0 1.5em 0;
            font-size: 3em;
            color: black;
            text-align:center;
            padding-left:350px;
        }

        label {
            color: black;
        }
    </style>
</head>
<body>
     
    <div class="row text-center" >
        <h1 class="title">BMI Calculator</h1>

    </div>
    
    <div id="div1">
        <br />
        <label>Height(CM)</label>
        <input type="text" id="height" />
        <br />
        <label>Weight(KG)</label>
        <input type="text" id="weight" />
        <br />
        <button id="hesapla" onclick="hesapla()" class="btn btn-success">Hesapla</button>
        <p id="sonuc"></p>
    </div>
</body>
</html>

    <script type="text/javascript"></script>
    <script>
        function hesapla() {
            var h = document.getElementById(`height`).value;
            var w = document.getElementById(`weight`).value;
            var bmi = w / (h / 100 * h / 100);
            console.log(h);
            console.log(w);
            if (bmi < 18.49)
                document.getElementById("sonuc").innerHTML = "Zayıfsınız.  Vücut kitle endeksiniz:" + bmi;
            else if (bmi > 18.5 && bmi < 24.99)
                document.getElementById("sonuc").innerHTML = "Kilonuz normal.  Vücut kitle endeksiniz:" + bmi;
            else if (bmi > 25 && bmi < 29.99)
                document.getElementById("sonuc").innerHTML = "Biraz kilolu.  Vücut kitle endeksiniz:" + bmi;
            else if (bmi > 30)
                document.getElementById("sonuc").innerHTML = "Obezsiniz.  Vücut kitle endeksiniz:" + bmi;
        };
    </script>
